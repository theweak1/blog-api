{
	"extends": "@tsconfig/node22/tsconfig.json",
	"compilerOptions": {
		    "target": "ES2022",
    "module": "NodeNext",
		    "moduleResolution": "NodeNext",
		"rootDir": "./src",
		"outDir": "./dist",

		"baseUrl": ".",
		"paths": {"@/*":["./src/*"]},
		"forceConsistentCasingInFileNames": true,
		    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"],
	"ts-node": { "files": true }
}
